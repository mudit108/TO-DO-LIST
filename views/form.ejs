<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add User Data</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom CSS for color styling -->
    <style>
        body {
            background-color: #f8f9fa; /* Light gray background */
            padding-top: 50px;
        }

        .container {
            background-color: #ffffff; /* White container background */
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1); /* Soft shadow effect */
        }

        .table {
            background-color: #ffffff; /* White table background */
        }

        .btn-delete {
            background-color: #dc3545; /* Red color for delete button */
            border-color: #dc3545;
        }

        .btn-edit {
            background-color: #007bff; /* Blue color for edit button */
            border-color: #007bff;
        }

        .btn-delete:hover,
        .btn-edit:hover {
            background-color: #bb2d3b; /* Darker red color on hover for delete button */
            border-color: #bb2d3b;
        }

        .btn-edit:hover {
            background-color: #0056b3; /* Darker blue color on hover for edit button */
            border-color: #0056b3;
        }
    </style>
</head>
<body>
    <div class="container">
        <form action="/insertData" method="post">
            <h2 class="mb-4">Add Tasks</h2>
            <table class="table">
                <tr>
                    <th>Task </th>
                    <td><input type="text" class="form-control" name="taskName" placeholder="Enter Task description" required></td>
                </tr>
                <tr>
                    <td colspan="2" align="center"><button type="submit" class="btn btn-primary">Add Task</button></td>
                </tr>
            </table>
        </form>

        <table class="table mt-4">
            <h2>Task List</h2>
            <thead>
                <tr>
                    <th>Task Name</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% taskData.forEach((task) => { %>
                    <tr>
                        <td><%= task.taskName %></td>
                        <td>
                            <a href="/deleteData?taskName=<%= task.taskName %>" class="btn btn-delete">Task Compeleted</a>
                            <a href="/editData?taskName=<%= task.taskName %>" class="btn btn-edit">Edit</a>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</body>
</html>
